<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="60dp"
    android:paddingBottom="80dp">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_star_border"
        android:tint="#F48FB1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No favorites yet"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark contacts as favorites to see them here.\nTap the heart icon on any contact to add them to your favorites."
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnBrowseContactsFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Contacts"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

</LinearLayout>
