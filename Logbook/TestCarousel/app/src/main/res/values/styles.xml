<resources>
    <!-- Toolbar -->
    <style name="Widget.ImageViewer.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/md_on_primary</item>
        <item name="subtitleTextColor">@color/md_on_primary</item>
    </style>

    <style name="TextAppearance.ImageViewer.ToolbarTitle"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/md_on_primary</item>
    </style>

    <!-- FAB -->
    <style name="Widget.ImageViewer.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/md_primary</item>
        <item name="tint">@color/md_on_primary</item>
        <item name="useCompatPadding">true</item>
    </style>
</resources>
