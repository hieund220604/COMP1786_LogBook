<resources>

    <style name="Theme.M_Hike_Native" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primaryDark</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_secondaryDark</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>

        <!-- Error Colors -->
        <item name="colorError">@color/md_theme_error</item>
        <item name="colorOnError">@color/md_theme_onError</item>

        <!-- Status Bar & System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/md_theme_surface</item>

        <!-- Window Configuration -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Text Appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyLarge</item>

        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.M_Hike.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.M_Hike.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.M_Hike.LargeComponent</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.M_Hike.CardView</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.M_Hike.Button</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.M_Hike.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.M_Hike.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.M_Hike.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Enhanced Card Style -->
    <style name="Widget.M_Hike.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Enhanced Button Style -->
    <style name="Widget.M_Hike.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>