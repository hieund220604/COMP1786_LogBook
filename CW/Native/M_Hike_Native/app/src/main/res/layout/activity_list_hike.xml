<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_theme_background"
    tools:context=".ui.ListHikeActivity">

    <!-- Fixed App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <LinearLayout
            android:id="@+id/topAppBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/topAppBarInner"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_secondary">


            <ImageView
                    android:id="@+id/topAppBarIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="start|center_vertical"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/topAppBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_list_hikes"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center" />

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Modern Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="40dp">

            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary_ultra_light">

                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:padding="40dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mountain"
                        app:tint="@color/md_theme_primary"
                        android:alpha="0.6"
                        android:contentDescription="No hikes" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Hikes Yet"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start adding your hiking adventures!"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/gray_600"
                android:textAlignment="center"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the + button to create your first hike"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/gray_500"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Enhanced RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:scrollbars="vertical" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
