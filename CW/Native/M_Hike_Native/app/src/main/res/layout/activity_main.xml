<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_theme_background">

    <!-- Fixed App Bar with proper elevation -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <!-- Custom App Bar with Image and Title -->
        <LinearLayout
            android:id="@+id/topAppBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Inner bar: use FrameLayout so title can be centered horizontally while icon stays left -->
            <FrameLayout
                android:id="@+id/topAppBarInner"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_primary">

                <ImageView
                    android:id="@+id/topAppBarIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_hike"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/topAppBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_main"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:includeFontPadding="false" />

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content with proper behavior -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <!-- Hero Welcome Card with Modern Design -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:background="@drawable/gradient_primary"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_mountain"
                        app:tint="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to M-Hike"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track and explore your hiking adventures"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/white"
                        android:alpha="0.95"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Cards Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp" />

            <!-- Row 1: Add Hike & View Hikes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- Add Hike Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAdd"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="@color/white">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_icon_circle_primary">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_add"
                                app:tint="@color/md_theme_primary"
                                android:contentDescription="@string/add_hike" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_hike"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_hike_sub"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/gray_600"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- View Hikes Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardList"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="@color/white">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_icon_circle_secondary">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_list"
                                app:tint="@color/md_theme_secondary"
                                android:contentDescription="@string/view_hikes" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_hikes"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_hikes_sub"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/gray_600"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 2: Search & Export Database -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- Search Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSearch"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="@color/white">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_icon_circle_primary">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_search"
                                app:tint="@color/md_theme_primary"
                                android:contentDescription="@string/search" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/search"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/search_sub"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/gray_600"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Export Database Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExport"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="@color/white">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_icon_circle_secondary">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_export"
                                app:tint="@color/md_theme_secondary"
                                android:contentDescription="@string/export_database" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/export_database"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/md_theme_onSurface"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/export_database_sub"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"
                            android:textColor="@color/gray_600"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
